<h1>Ajouter un event</h1>
<hr/>

<form action="/admin/events-add" method="POST" enctype="multipart/form-data">

  <h2>Informations générales</h2>
    <label for="event_name">Nom de l'event</label>
    <input type="text" id="event_name" name="event_name" required>

    <label for="event_type">Type d'event</label>
    <input type="text" id="event_type" name="event_type" required>

    <label for="date_start">Date de début</label>
    <input type="date" id="date_start" name="date_start" required>

    <label for="date_end">Date de fin</label>
    <input type="date" id="date_end" name="date_end" required>

    <h2>Informations textuelles</h2>

    <label for="event_price">Tarifs</label>
    <input type="text" id="event_price" name="event_price" required>

    <label for="event_description">Description</label>
    <textarea id="event_description" name="event_description" required></textarea>
  
    <label for="event_programmation">Programmation</label>
    <textarea id="event_programmation" name="event_programmation" required></textarea>
  
    <h2>Réseaux</h2>

    <label for="event_youtube">Vidéo Youtube</label>
    <input type="text" id="event_youtube" name="event_youtube" >

    <div class="img-form" style="display: flex; flex-direction: column; gap: 20px;">
    <label for="image">Vignette de l'event (.jpg, .jpeg, .png)</label>
    <input class="img-input" type="file" id="image" name="image" accept=".jpg,.jpeg,.png" />
  </div>

    <h2>Résidences présentes</h2>

    <ul style="list-style-type: none; max-height: 200px; overflow-y: scroll; margin-bottom: 50px;">
      <% residencies.sort((a, b) => a.residency_name.localeCompare(b.residency_name)).forEach(function(residency) { %>
        <li>
          <label for="<%= residency._id %>">
            <input type="checkbox" id="<%= residency._id %>" name="current_residencies" value="<%= residency._id %>">
            <%= residency.residency_name %>
          </label>
        </li>
      <% }); %>
    </ul>

    <button class="custom-button"> Ajouter event</button>
  </form>
  