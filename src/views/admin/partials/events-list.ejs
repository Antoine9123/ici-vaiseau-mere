<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
    </tr>
  </thead>
  <tbody>
    <% if (events.length > 0) { %> 
      <% events.sort((a, b) => b.date_start - a.date_start).forEach(event => { %>
        <tr>
          <td><%= event.event_name %></td>
          <td>
            <%= event.date_start.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit', year: 'numeric' }) %>
          </td>
          <td>
            <%= event.date_end.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit', year: 'numeric' }) %>
          </td>
          <td>
            <button>Modifier</button>
            <form id="delete-form-<%= event._id %>" method="post" action="/admin/event-delete/<%= event._id %>" onsubmit="return confirmDelete(event)">
              <button type="submit">Supprimer</button>
            </form>
          </td>
        </tr>
      <% }); %> 
    <% } else { %>
      <tr>
        <td colspan="2">Aucun événement disponible</td>
      </tr>
    <% } %>
  </tbody>
</table>

<script>
  function confirmDelete(event) {
    
    if (!confirm("Êtes-vous sûr de vouloir supprimer cet événement ?")) {
      event.preventDefault(); 
      return false;
    }
    return true; 
  }
</script>
