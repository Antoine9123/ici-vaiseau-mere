<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs")%>
    <link rel="stylesheet" href="/css/residency.css">
    <title><%=residency.collective_name%></title>
  </head>
  
    <body>
      <div class="background-lines">
      <%- include('./partials/header.ejs') %>
      <main>
        <section class="title-section">
          <div class = "title-container">
            <div class="date">
              <div class="first-line">
                <div class = "start-day"><%= residency.residency_start.getDate(); %> </div>
                <div class="arrow"></div>
                <div class="end-day"><%= residency.residency_end.getDate() %></div> 
              </div>

              <div>
                <%= (residency.residency_end.getMonth()<10)?"0"+ residency.residency_end.getMonth():+ residency.residency_end.getMonth() %>.<%=residency.residency_end.getFullYear()-2000%>&nbsp
              </div>
            </div>

            <div class="titles">
              <h1><%= residency.collective_name %></h1>
              <h2><%= residency.residency_name %></h2>
            </div>

            <div class="socials">
              <a class = "siteweb" href="<%= residency.residency_website %>" target="_blank" rel="noopener noreferrer"></a>
              <a class = "fb" href="<%= residency.residency_facebook %>" target="_blank" rel="noopener noreferrer"></a>
              <a class = "insta" href="<%= residency.residency_insta %>" target="_blank" rel="noopener noreferrer"></a>
              <a class = "youtube" href="<%= residency.residency_youtube %>" target="_blank" rel="noopener noreferrer"></a>
            </div>
          </div>

          <div class="line"></div>
        </section> 
        <section class="main-content">
          <section class="info">
            <aside>
              <div class="residency-artists">
                <h3>artists</h3>
                <% let i = 1; %>
                <% while(residency["artist_name_"+i] !== undefined) {%>
                  <% if (residency["artist_name_"+i] !=="") { %>
                    <a href="<%= residency["artist_url_"+i] %>" target="_blank" rel="noopener noreferrer"><%=residency["artist_name_"+i]%></a>
                  <% } %>
                  <% i++ %>
                <% } %>

              </div>
              <% if (events.length > 0) { %>
                <div class="residency-events">
                    <h3>events</h3>
                    <% events.forEach(event => { %>
                        <a href="<%= "/agenda/"+event._id %>"><%= event.event_name %></a>
                    <% }) %>
                </div>
            <% } %>
            </aside>
            <p class="description" style="white-space: pre-line"><%= residency.description %></p>
          </section>
          <section class="pictures">
            <div class="left-column">
              <div class="img-container" style = "background-image: url(<%= "/assets/residencies_img/"+residency.collective_name.replace(/[^\w\s]/g, "").replace(/\s+/g, "_").toLowerCase()+"/img1.png" %>)"></div>
              <div class="img-container" style = "background-image: url(<%= "/assets/residencies_img/"+residency.collective_name.replace(/[^\w\s]/g, "").replace(/\s+/g, "_").toLowerCase()+"/img2.png" %>)"></div>
              <div class="img-container" style = "background-image: url(<%= "/assets/residencies_img/"+residency.collective_name.replace(/[^\w\s]/g, "").replace(/\s+/g, "_").toLowerCase()+"/img3.png" %>)"></div>
            </div>
            <div class="right-column">
              <div class="img-container" style = "background-image: url(<%= "/assets/residencies_img/"+residency.collective_name.replace(/[^\w\s]/g, "").replace(/\s+/g, "_").toLowerCase()+"/img4.png" %>)"></div>
              <div class="img-container" style = "background-image: url(<%= "/assets/residencies_img/"+residency.collective_name.replace(/[^\w\s]/g, "").replace(/\s+/g, "_").toLowerCase()+"/img5.png" %>)"></div>
            </div>

          </section>
        </section>
      </main>
      <footer>

      </footer>
    </div>
</body>
</html>