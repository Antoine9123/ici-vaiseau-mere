<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs")%>
    <link rel="stylesheet" href="/css/residencies.css">

    <title>Residencies</title>
  </head>
  <body>

    <%- include('./partials/header.ejs') %>
    <main>

      <section class="title-section">
        <div class = "top-container">
          <h1 class = "section-title">Residencies</h1>
          <a href="#" class = "become-member wip">become a member</a>
        </div>
        <div class="line"></div>
      </section> 

      <section class="filter-section">

      </section>

      <section class="residencies-list">
        <% projects.forEach((project) => { %>
          <a class = "residency" href="/projects/<%= project._id%>">
            <div class="img-container" style = "background-image: url(<%= "/assets/projects_img/"+project.collective_name.replaceAll(" ", "_")+"/img0.jpg" %>)">
              <div class="checkerboard"></div>
            </div>

            <div class="text-container">
              <div class="titles">
                <h2><%= project.collective_name %></h2>
                <h3><%= project.project_name %></h3>
              </div>

              <div class="date">
                <div class="first-line">
                  <div class = "start-day"><%= project.residency_start.getDate(); %> </div>
                  <div class="arrow"></div>
                  <div class="end-day"><%= project.residency_end.getDate() %></div> 
                </div>
                <div class = "month"><%= (project.residency_end.getMonth()<10)?"0"+ project.residency_end.getMonth():+ project.residency_end.getMonth() %>.<%=project.residency_end.getFullYear()-2000%>&nbsp</div>
              </div>
            </div>
          </a>
        <% }) %>
        
      </section>
    </main>
  </body>

</html>
